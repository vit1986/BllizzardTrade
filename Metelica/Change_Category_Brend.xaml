<Window x:Class="Metelica.Change_Category_Brend"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change_Category_Brend" Height="150" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="67*"/>
            <ColumnDefinition Width="79*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label HorizontalContentAlignment="Left" FontSize="9" VerticalContentAlignment="Center" Content="Выберите старое название"></Label>
        <ComboBox Grid.Row="0" Grid.Column="1" Name="CBCategory" DisplayMemberPath="Name" Margin="5,8" SelectionChanged="CBCategory_SelectionChanged"></ComboBox>
        <TextBox VerticalContentAlignment="Center" Grid.Row="1" Grid.Column="1" Name="AddItems" Margin="2,6" TextChanged="AddItems_TextChanged"></TextBox>
        <Button Name="ADD" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsEnabled="False" Content="Добавить" Grid.Row="2" Grid.Column="1" Margin="5,2"></Button>
        <Label HorizontalContentAlignment="Left" VerticalContentAlignment="Center"   Content="Новое название" Grid.Row="1" Grid.Column="0" Margin="3,0"></Label>
    </Grid>
</Window>
