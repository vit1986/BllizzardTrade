<Window x:Class="Metelica.Add_Brend_Category"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add_Brend_Category" Height="100" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="53*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <TextBox VerticalContentAlignment="Center" Grid.Row="1" Grid.Column="0" Name="AddItems" Margin="2" TextChanged="AddItems_TextChanged"></TextBox>
        <Button Name="ADD" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsEnabled="False" Content="Добавить" Grid.Row="1" Grid.Column="1" Margin="5,2" Click="ADD_Click"></Button>
        <Label Name="lTitle" Content="Test" Grid.Row="0" Grid.Column="0" Margin="10,0"></Label>
    </Grid>
</Window>
