<Window x:Class="Metelica.PrintPrice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="400" Width="300">
    <Grid Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Canvas Name="MyCanvas" Grid.Row="1" Grid.Column="1">
        </Canvas>
        <StackPanel Grid.Row="0" Grid.Column="2" Grid.RowSpan="3" Background="Aquamarine"></StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Background="Aquamarine"></StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1"  Background="Aquamarine">
            <Label FontWeight="Bold"></Label>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="1"  Background="Aquamarine">
            <Button Name="Print" Content="Print" Margin="5" Click="Print_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
