<Window x:Class="Metelica.ResAnalitic"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ResAnalitic" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="92*"/>
            <ColumnDefinition Width="585*"/>
            <ColumnDefinition Width="115*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="505*"/>
            <RowDefinition Height="36*"/>
        </Grid.RowDefinitions>
        <DataGrid Name="MyGrid" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="5" MouseDoubleClick="MyGrid_MouseDoubleClick"></DataGrid>
        <Button Name="Print" Content="Печать" Grid.Row="2" Grid.Column="2" Margin="5" Click="Print_Click"></Button>
        <CheckBox Name="SelectAll" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Content="Выбрать все" Margin="5" Checked="CheckBox_Checked"></CheckBox>
    </Grid>
</Window>
